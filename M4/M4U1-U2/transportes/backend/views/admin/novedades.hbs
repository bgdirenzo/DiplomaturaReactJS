<div class="container">
    <div class="row">
        <h1 class="text-start">Bienvenido a Novedades!</h1>
    </div>
    <div class="row">
        <div class="col-7">
            <h3>Listado de Novedades</h3>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true">
                    Nuevo</i></a>
        </div>
    </div>
    <div class="row">
        <div class="col-7 ">
            <table class="table">
                <thead>
                    <tr class="table-dark">
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col">Subtítulo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Cuerpo</th>
                        <th class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id_novedad}}</th>
                        <td>{{titulo}}</td>
                        <td>{{subtitulo}}</td>
                        <td>{{{imagen}}}</td>
                        <td>{{cuerpo}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id_novedad}}" title="editar" class="btn btn-sm btn-secondary"><i class="fa fa-pencil"
                                    aria-hidden="true"></i></a>
                            <a href="/admin/novedades/eliminar/{{id_novedad}}" title="eliminar" class="btn btn-sm btn-secondary"><i class="fa fa-trash"
                                    aria-hidden="true"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>