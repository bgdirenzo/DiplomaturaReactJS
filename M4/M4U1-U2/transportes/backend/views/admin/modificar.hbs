<div class="container" style="margin: 50px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            </br>
            <form method="post" action="/admin/novedades/modificar">
                <input type="hidden" value="{{novedad.id_novedad}}" name="id">
                <div class="form-group">
                    <input type="text" name="titulo" value="{{novedad.titulo}}" class="form-control">
                </div>
                <div class="form-group">
                    <textarea name="subtitulo" class="form-control">{{novedad.subtitulo}}</textarea>
                </div>
                <div class="form-group">
                    <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}}</textarea>
                </div>
                </br>
                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
    </div>
    {{#if error}}
        <h5>{{message}}</h5>
    {{/if}}
</div>